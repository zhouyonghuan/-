  color: #989898;
  opacity: 1;
  margin-right: 10rpx;
}
.home .destination {
  width: 700rpx;
  height: 310rpx;
  background: white;
  box-shadow: 0px 3rpx 6rpx rgba(0, 0, 0, 0.11);
